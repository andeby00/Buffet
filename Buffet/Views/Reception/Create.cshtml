@model Buffet.Models.Reservation

@{
    ViewData["Title"] = "Reception";
}
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <form asp-action="Create" asp-controller="Reception">
                <div asp-validation-summary="ModelOnly" class="text-danger" />
                <div class="form-group">
                    <label asp-for="Date" class="control-label" > Insert date for breakfast</label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Adults" class="control-label" > How many adults? </label>
                    <input asp-for="Adults" class="form-control" />
                    <span asp-validation-for="Adults" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Children" class="control-label" > How many bebe? </label>
                    <input asp-for="Children" class="form-control" />
                    <span asp-validation-for="Children" class="text-danger" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-secondary" />
                </div>
            </form>
        </div>+
        
        

    </div>
</div>